@model OnlineCinemaTickets.Domain.DomainModels.AddRoleModel


@using (Html.BeginForm("AddRole", "Account"))
{
    <div class="form-group w-50">
        @Html.DropDownListFor(x => x.Username, new SelectList(Model.usernames), new { @class = "form-control" })
    </div>
    <div class="form-group w-50">
        @Html.DropDownListFor(x => x.SelectedRole, new SelectList(Model.roles), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-outline-secondary">Save</button>
}
